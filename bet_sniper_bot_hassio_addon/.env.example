# Betfair credentials
BETFAIR_USERNAME=your_betfair_username
BETFAIR_PASSWORD=your_betfair_password
BETFAIR_APP_KEY=your_betfair_app_key

# Trading mode (true = paper only, false = live bets)
PAPER_TRADING=true

# Leagues (comma-separated slugs)
LEAGUES=soccer_italy_serie_a,soccer_epl,soccer_spain_la_liga,soccer_germany_bundesliga

# Odds range
# Conservative range targeting strong favorites (56â€“67% implied probability)
MIN_ODDS=1.5
MAX_ODDS=2.2

# Stake & risk
STAKE_PER_BET=5.0
MAX_DAILY_LOSS_PCT=5.0
RESERVE_PCT=30.0

# Scheduling
LOOKAHEAD_HOURS=24
CHECK_INTERVAL=1800

# Snipe window: bet only when kick-off is within BET_WINDOW_HOURS
# and at least MIN_TIME_TO_KO_MINUTES away (allows using final line-ups)
BET_WINDOW_HOURS=2.0
MIN_TIME_TO_KO_MINUTES=45

# Telegram relay (leave empty to disable notifications)
TELEGRAM_RELAY_URL=
TELEGRAM_API_KEY=
